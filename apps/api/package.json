    "@nestjs/platform-express": "^11.0.11",
    "@shipwright/contracts": "workspace:*",
    "@shipwright/observability": "workspace:*",
    "express": "^5.1.0",
    "jose": "^5.9.6",
    "pino": "^9.14.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.5"
  }
